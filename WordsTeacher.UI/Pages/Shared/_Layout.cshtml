@* set the default design for all pages *@

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - BruhTeacher</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/WordsTeacher.UI.styles.css" asp-append-version="true" />
</head>
<body>
	
	@* NAVIGATION BAR SECTION 
		is different in all pages because of active tab
	*@
	@RenderSection("nav_section")

	

	<div class="container">
		<main role="main" class="pb-3 cont-main">
			@RenderBody()

		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			WordsTeacher bruh
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)


</body>
</html>