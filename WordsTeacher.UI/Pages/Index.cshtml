@* index page used to be LOGIN PAGE 

    First when loading you need to login then you are redirected to words page 
    where all words will be displayed and there would be possible to add new one
*@

@page
@model IndexModel
@{
    ViewData["Title"] = "Log Bruh";
            //Layout = "Shared/_Layout.cshtml";
}
@section nav_section{

<header>
    <div class="container-fluid navi">
        <nav class="navbar">
            <ul class="nav">

                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/WordPage">Words</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Train">Train</a>
                </li>

                @if (User.Identity is null || !User.Identity.IsAuthenticated)
                {
                    <li class="nav-item last">
                        <a class="nav-link active" asp-area="" asp-page="/Index">Login</a>
                    </li>
                }
                else
                {
                    <li class="nav-item last">
                        <a class="nav-link active" asp-area="" asp-page="/Index">Logout (@User.Identity.Name)</a>
                    </li>
                }
            </ul>
        </nav>
    </div>

</header>

}



